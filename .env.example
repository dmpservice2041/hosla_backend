# Server
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/hosla_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_ACCESS_SECRET="your-access-secret-key-min-32-chars"
JWT_REFRESH_SECRET="your-refresh-secret-key-min-32-chars"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="90d"

# SMS Gateway (MSG91)
SMS_PROVIDER="msg91"
MSG91_AUTH_KEY="your-msg91-auth-key"
MSG91_SENDER_ID="HOSLA"
MSG91_TEMPLATE_ID="your-template-id"

# SMS Gateway (Twilio) - Alternative
TWILIO_ACCOUNT_SID="your-twilio-sid"
TWILIO_AUTH_TOKEN="your-twilio-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_PRIVATE_KEY="your-firebase-private-key"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email"

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE_MB=100

# Default Admin
DEFAULT_ADMIN_PHONE="+919999999999"
DEFAULT_ADMIN_NAME="System Admin"

# Rate Limiting
OTP_RATE_LIMIT_PER_PHONE=3
OTP_RATE_LIMIT_PER_IP=10
OTP_RATE_LIMIT_WINDOW_MINUTES=10

# App
APP_NAME="Hosla"
APP_URL="https://hosla.in"
